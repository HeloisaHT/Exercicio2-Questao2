package Q2;

import java.util.*;

public class Calculadora {
	Scanner ler = new Scanner(System.in);
	double num1=0,num2=0, result = 0;
	
	int Somar() {
		System.out.println("Digite o primeiro numero: ");
		num1=ler.nextDouble();
		System.out.println("Digite o segundo numero: ");
		num2=ler.nextDouble();
		result = num1+num2;
		System.out.println("O resultado de "+num1+" + "+num2+" = "+result);
		return 0;
	}
	int Subtrair() {
		System.out.println("Digite o primeiro numero: ");
		num1=ler.nextDouble();
		System.out.println("Digite o segundo numero: ");
		num2=ler.nextDouble();
		result = num1-num2;
		System.out.println("O resultado de "+num1+" - "+num2+" = "+result);
		return 0;
	}
	int Multiplicar() {
		System.out.println("Digite o primeiro numero: ");
		num1=ler.nextDouble();
		System.out.println("Digite o segundo numero: ");
		num2=ler.nextDouble();
		result = num1*num2;
		System.out.println("O resultado de "+num1+" * "+num2+" = "+result);
		return 0;
	}
	int Dividir() {
		System.out.println("Digite o primeiro numero: ");
		num1=ler.nextDouble();
		System.out.println("Digite o segundo numero: ");
		num2=ler.nextDouble();
		result = num1/num2;
		System.out.println("O resultado de "+num1+" / "+num2+" = "+result);
		return 0;
	}

}
